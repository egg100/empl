<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="250" prefWidth="450" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
	<center>
		<BarChart id="barChart">
			<xAxis>
				<CategoryAxis id="category" side="BOTTOM" /> <!-- x축은 바닥에 y축은 왼쪽에 -->
			</xAxis>
			<yAxis>
				<NumberAxis autoRanging="false" side="LEFT" tickUnit="25.0" />
			</yAxis>
		</BarChart>
	</center>
   <bottom>
      <HBox alignment="TOP_CENTER" prefHeight="37.0" prefWidth="450.0" BorderPane.alignment="CENTER">
         <children>
            <Button id="btnCancel" text="닫기" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
